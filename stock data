from polygon import RESTClient
import tkinter as tk

class WelcomeScreen:
    def __init__(self, header):
        self.header = header
    def display(self):
        window = tk.Tk()
        window.title("Stock Market Simulator")
        # sets the window title to "Stock Market Simulator
        screen_width = window.winfo_screenwidth()
        screen_height = window.winfo_screenheight()
        # sets the app to your screen wdith and height
        window.geometry(f"{screen_width}x{screen_height}+0+0")
        # sets the app in full screen
        tk.Label(window, text=self.header, font=("Abadi", 36)).pack(expand = True)
        window.mainloop()

# Create and display the welcome screen
welcome = WelcomeScreen("Welcome To Hyacinth's Stock Market Simulator!")
welcome.display()




